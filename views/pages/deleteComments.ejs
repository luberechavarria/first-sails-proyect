<div class="container">
	<div class="row">
    <div class="col-md-12">
      <% if (isAdmin == false && errMsg != ""){ %>
					<h4 style="color: brown; text-align: center; font-size: 25px"> <%= errMsg %> </h4>
      <%}else{%> 
        <p   id="msg-notAllowed" style="color:red; font-size:25px; text-align: center;" > </p>
        <h4>Comments</h4>
        <div class="table-responsive">
          <table id="mytable" class="table table-bordred table-striped">
            <thead>
              <th>NumberOfComments</th>
              <th>User Name</th>
              <th>comment</th>
              <th>Edit</th>
              <th>Delete</th>
            </thead>
            <tbody>
              <% comments.forEach(function (comment){ %> 
                <tr id= "item-<%= comment.id %>">
                  <td> <%= comment.commentNumber%> </td>
                  <td> <%= comment.name %> </td>
                  <td  id= "cmnt-<%= comment.id%>" backupComment-txt="<%= comment.comment %>" contenteditable="true" type="text"  > <%= comment.comment %> </td>
                  <td><p data-placement="top" data-toggle="tooltip" title="Edit"> <button onclick="requestEditComment(<%= comment.id%>);" class="btn btn-primary btn-xs" data-title="Edit" data-toggle="modal" data-target="#edit" ><span class="glyphicon glyphicon-pencil"></span></button></p></td>
                  <td><p data-placement="top" data-toggle="tooltip" title="Delete"><button onclick="requestDeleteComment(<%= comment.id%>);" class="btn btn-danger btn-xs" data-title="Delete" data-toggle="modal" data-target="#delete" ><span class="glyphicon glyphicon-trash"></span></button></p></td>
                </tr>
              <% }); %>
            </tbody>
          </table>
          <div class="clearfix"></div>
        </div>
      <%};%>  
    </div>    
  </div>
</div>            
<script type="text/javascript" src="/js/delete-product-main.js"></script>