<div class="container padding_continer">

 <div class="card-columns">
    <h2 class="card-title"> <%= productInfo.title %></h2>
    <h5 class="card-title"><%= productInfo.description %></h5>
    <div class="card">
        <img class="card-img-top" src="<%= productInfo.image %>" alt="Card image cap">
    </div>
</div>

<h3 class="text-success">Comments</h3>
<% comments.forEach(function(comment){ %>

    <div class="container bootstrap snippet">
        <div class="row">
            <div class="col-md-12">
                <div class="blog-comment">        
                   <ul class="comments">
                        <li class="clearfix">
                            <img src=<%= comment.imgUser%> class="avatar" alt="">
                            <div class="post-comments">
                                <p class="meta">Dec 18, 2014 <a href="#"><%= comment.name%></a> says : <i class="pull-right"><a href="#"><small>Reply</small></a></i></p>
                                <p> <%= comment.comment%></p>
                            </div>
                        </li>
                    
                    </ul>
                </div>
            </div>
        </div>
    </div>
<% }); %> 
<hr>

<div class="form-group ">
    <form action="/product" method="post" >
        <label for="comment">Leave your Comment here:</label>
        <textarea class="form-control" rows="5" id="comment" type="text" name="comment" ></textarea>
        <input type="hidden" name="productId" value="<%= productInfo.id %>">

        <input class="btn btn-primary"   type="submit" value="Submit"> 
    </form>
</div>
           
 
