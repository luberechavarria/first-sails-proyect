<div class="container">
	<div class="row">
		<div class="col-md-12">
				<% if (isAdmin == false && errMsg != ""){ %>
					<h4 style="color: brown; text-align: center; font-size: 25px"> <%= errMsg %> </h4>
				<%}else{%> 
			<form class="form-horizontal" action="/userAdminEdit/<%= userToEdit.id %>" method="post">
				<div class="form-group">
					<label class="control-label col-sm-2" for="email">Name:</label>
					<div class="col-sm-10">
						<input type="text" name="Name" class="form-control" id="email" value="<%= userToEdit.firstName %> ">
					</div>
				</div>

				<div class="form-group">
					<label class="control-label col-sm-2" for="email">lastName:</label>
					<div class="col-sm-10">
						<input type="text" name="lastName" class="form-control" id="email" value="<%= userToEdit.lastName %> ">
					</div>
				</div>

				<div class="form-group">
					<label class="control-label col-sm-2" for="email">Email:</label>
					<div class="col-sm-10">
						<input name="Email" type="email" class="form-control" id="email" value="<%= userToEdit.email %>">
					</div>
				</div>

				<div class="form-group">
					<div class="col-sm-offset-2 col-sm-10">
						<div class="checkbox">
							<label for="isAdmin"><input  type="checkbox" name="isAdmin"  <% if(userToEdit.isAdmin){ %> checked <% } %> >
								Is Admin
							</label>
						</div>
					</div>
				</div>

				<div class="form-group">
					<div class="col-sm-offset-2 col-sm-10">
						<button type="submit" class="btn btn-default">save</button>
					</div>
				</div>
			</form>
			<%};%>
		</div>
	</div>
</div>