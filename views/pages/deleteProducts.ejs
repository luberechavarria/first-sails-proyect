<div class="container">
	<div class="row">
    <div class="col-md-12">
      <% if (isAdmin == false && errMsg != ""){ %>
        <h4 style="color: brown; text-align: center; font-size: 25px"> <%= errMsg %> </h4>
      <%}else{%> 
        <p   id="msg-notAllowed" style="color:red; font-size:25px; text-align: center;" > </p>
        <h4>Products</h4>
        <div class="table-responsive">
          <table id="mytable" class="table table-bordred table-striped">
            <thead>
              <th>IdProduct</th>
              <th>ProductName</th>
              <th>comments</th>
              <th>Delete</th>
            </thead>
            <tbody>
              <% product.forEach(function (product){ %>
                <tr id= "item-<%= product.id %>" >
                  <td > <%= product.id %> </td>
                  <td> <%= product.title %> </td>
                  <td> <a href = "/product/<%= product.id %>/comments/delete" > <%= product.numberOfComments %> </a></td>
                  <td><p data-placement="top" data-toggle="tooltip" title="Delete"> <button onclick="requestDeleteProduct(<%= product.id %>);"class="btn btn-danger btn-xs" data-title="Delete" data-toggle="modal" data-target="#delete" ><span class="glyphicon glyphicon-trash"></span></button></p></td> </a>
                </tr>
              <% }); %>
            </tbody>
          </table>
          <div class="clearfix"></div>
        </div>
      <%};%>
    </div>
	</div>
</div>

<script type="text/javascript" src="/js/delete-product-main.js"></script>